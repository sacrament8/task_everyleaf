<% if your_task_over_deadline? %>
  <% if @expired_tasks.present? %>
    <div class="row">
    <h2 class="col-12 text-center">期限切れタスク</h2>
      <div class="table-responsive">
        <table class="table table-striped  table-hover">
          <thead>
            <tr>
            <th scope="col">タイトル</th>
            <th scope="col">内容</th>
            <th scope="col">終了期限</th>
            <th scope="col">ユーザー</th>
            <th scope="col">ステータス</th>
            <th scope="col">優先順位</th>
            <th></th>
            </tr>
          </thead>
          <tbody>
            <% @expired_tasks.each do |task| %>
              <tr>
                <td><strong><%= task.title.truncate(18) %></strong></td>
                <td><%= task.content.truncate(20) %></td>
                <td><span class="expired_date"><%= task.deadline %></span></td>
                <td><%= task.user.name %></td>
                <td><span class="status btn btn-primary"><%= task.status %></span></td>
                <td><span class="priority btn"><%= task.priority %></span></td>
                <td>
                  <%= link_to "詳細", task_path(task), class:"btn btn-info index_btn" %>
                  <%= link_to "編集", edit_task_path(task), class:"btn btn-info index_btn" %>
                  <%= link_to "削除", task_path(task), method: :delete, data: { confirm: "タスクを削除しますか?" }, class:"btn btn-info index_btn" %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table><br>
      </div>
    </div>
  <% end %>

  <% if @one_day_left_tasks.present? %>
    <div class="row">
    <h2 class="col-12 text-center">期限まで1日を切っているタスク</h2>
      <div class="table-responsive">
        <table class="table table-striped  table-hover">
          <thead>
            <tr>
            <th scope="col">タイトル</th>
            <th scope="col">内容</th>
            <th scope="col">終了期限</th>
            <th scope="col">ユーザー</th>
            <th scope="col">ステータス</th>
            <th scope="col">優先順位</th>
            <th></th>
            </tr>
          </thead>
          <tbody>
            <% @one_day_left_tasks.each do |task| %>
              <tr>
                <td><strong><%= task.title.truncate(18) %></strong></td>
                <td><%= task.content.truncate(20) %></td>
                <td><span class="expired_date"><%= task.deadline %></span></td>
                <td><%= task.user.name %></td>
                <td><span class="status btn btn-primary"><%= task.status %></span></td>
                <td><span class="priority btn"><%= task.priority %></span></td>
                <td>
                  <%= link_to "詳細", task_path(task), class:"btn btn-info index_btn" %>
                  <%= link_to "編集", edit_task_path(task), class:"btn btn-info index_btn" %>
                  <%= link_to "削除", task_path(task), method: :delete, data: { confirm: "タスクを削除しますか?" }, class:"btn btn-info index_btn" %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table><br>
      </div>
    </div>
  <% end %>
<% else %>
  <h2 class="col-12 text-center">期限切れタスク、および期限まで1日を切っているタスクはありません</h2>
<% end %>