<%= form_with model:@task, local: true do |f| %>
  <% if @task.errors.any? %>
    <h2><%= @task.errors.count %>件のエラーがあります</h2>
    <ul>
      <% @task.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>
  <div>
    <%= f.label :title %>
    <%= f.text_field :title, id: 'title' %>
  </div>
  <div>
    <%= f.label :content %>
    <%= f.text_field :content, id: 'content' %>
  </div>
  <div>
    <%= f.label :deadline %>
    <%= f.date_select :deadline %>
  </div>
  <div>
    <%= f.submit '作成' %>
  </div>
<% end %>