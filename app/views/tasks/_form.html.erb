<%= form_with model:@task, local: true do |f| %>
  <% if @task.errors.any? %>
    <h2><%= @task.errors.count %>件のエラーがあります</h2>
    <ul>
      <% @task.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>
  <div>
    <%= f.label :タイトル %>
    <%= f.text_field :title %>
  </div>
  <div>
    <%= f.label :内容 %>
    <%= f.text_field :content %>
  </div>
  <div>
    <%= f.submit '作成' %>
  </div>
<% end %>