<h2 class="text-center my-2">登録ユーザー一覧</h2>
<div class= row>
  <div class="table-responsive">
    <table class="table table-striped  table-hover">
      <thead>
        <tr>
        <th scope="col">ユーザー名</th>
        <th scope="col">所持タスク数</th>
        <th></th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><strong><%= user.name %></strong></td>
            <td><%= user.tasks.count %></td>
            <td>
              <%= link_to "所持タスク一覧", admin_user_path(user), class:"btn btn-info index_btn" %>
              <%= link_to "更新", edit_admin_user_path(user), class:"btn btn-info index_btn" %>
              <%= link_to "削除", admin_user_path(user), method: :delete, data: { confirm: "ユーザー「#{ user.name }」を削除しますか?" }, class:"btn btn-info index_btn" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table><br>
  </div>
</div>
<!--ページネーション-->
<div class="row">
  <div class="col-12 clearfix">
    <div class="float-right mr-5"><%= paginate @users %></div>
  </div>
</div>
<!--新規ユーザー作成ボタン-->
<div class="row">
  <%= link_to '新規ユーザー作成', new_admin_user_path, class: 'btn btn-primary mx-auto'%>
</div>